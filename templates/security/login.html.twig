{% extends "base.html.twig" %}

{% block body %}
	<h1>Connexion</h1>

	<form action="{{ path('security_login') }}" method="post">
		<div class="form-group">
			<input type="text" required name="_username" class="form-control" placeholder="adresse mail...">
        </div>
        <div class="form-group">
			<input type="password" required name="_password" class="form-control" placeholder="mot de passe">
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-success">Connexion</button>
		</div>
	</form>
{% endblock %}
